<div class="title-container flex">
  <h1>Foods</h1>
  <%= button_to "New food", new_food_path, method: :get %>
</div>

<% unless @foods.empty?%>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Measurement Unit</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td class="t-name"><%= food.name%></td>
          <td class="t-measurement_unit"><%= food.measurement_unit%></td>
          <td class="t-price">$ <%= food.price%></td>
          <% if can? :manage, food%>
            <td><%= button_to "Delete",  delete_food_path(food.id), method: :delete, class: "delete-btn"%></td>
          <% else %>
            <td> - </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No foods available</p>
<% end %>
